<div class="row">

    <div class="col-sm-4">
        <h1>Create Category</h1>
         <form action="/admin/categories/create" method="post">
             <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" placeholder="Enter title" class="form-control">
                </div>

            <button class="btn btn-primary">Create Category</button>
         </form>
    </div>

    <br>

    <hr>

</div>

<br>

<div class="row">

    <div class="col-sm-8">

        <h1>Categories</h1>

        <table class="table">

            <thead>
            <tr>
                <th>Name</th>
                <th>Post</th>
            </tr>
            </thead>
            <tbody>

            {{#each categories}}
            <tr>
                <td>{{name}}</td>
                <td><a href="/admin/categories/posts/{{id}}">All Posts</a></td>

                <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                <td>

                    <form action="/admin/categories/{{id}}?_method=DELETE" method="post">

                        <button class="btn btn-danger">Delete</button>

                    </form>

                </td>
            </tr>
            {{/each}}
            </tbody>

        </table>

    </div>

</div>