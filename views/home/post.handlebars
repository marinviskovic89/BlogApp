<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{post.title}}</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="#">{{post.user.firstName}}</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on {{generateDate date "MMMM Do YYYY"}}</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

        <hr>

        <p>{{post.body}}</p>

        <hr>

        {{#if data}}
            {{#if allowUser}}

                {{#if post.allowComments}}
                <!-- Comments Form -->
                <div class="card my-4">
                    <h5 class="card-header">Leave a Comment:</h5>
                    <div class="card-body">
                        <form action="/" method="post">
                            <div class="form-group">
                                <textarea name="body" class="form-control" rows="3"></textarea>

                                <input type="hidden" name="id" value="{{post.id}}">

                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>

                {{else}}

                    <h2>Comments not allowed for this post</h2>
                            <br>
                            <hr>

                {{/if}}
            {{else}}
                <h2>You don't have permisson to comment post</h2>
            {{/if}}

        {{else}}

            <input type="hidden" id="hiddenInput" value="{{post.id}}">
            You need to log in for to comment <a href="/login?param={{post.id}}" onclick=""> Login</a>
                        <br>
                        <hr>
        {{/if}}

        {{#each post.comments}}

        <!-- Single Comment -->
        <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="https://www.dontshake.org/media/k2/items/cache/c889234799e865bbe90cee71f6cd2e53_L.jpg" alt="">
            <div class="media-body">
                <h5 class="mt-0">{{user.firstName}}</h5>
                {{body}}
            </div>
        </div>
        {{/each}}

    </div>
    {{> home/sidebar}}

</div>