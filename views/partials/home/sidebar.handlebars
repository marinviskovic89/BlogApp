
<div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
            <div class="input-group">
                <form action="/search/" method="get" class="form-inline my-2 my-lg-0">
                    <input class="form-control" type="text" name="dsearch" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="submit">Go!</button>
                    </span>
                </form>
            </div>
        </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
        <h5 class="card-header">Categories</h5>
        <div class="card-body">
            <div class="row">

                {{#each categories}}

                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <a href="/category/{{id}}">{{name}}</a>
                        </li>
                    </ul>
                </div>

                {{/each}}
            </div>
        </div>
    </div>

    <script src="./routes/home/index.js"></script>
</div>